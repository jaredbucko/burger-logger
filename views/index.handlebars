<div class="row">
  <div class="col s12">
    <h1 class="center-align">The Burger Journal <i class="fas fa-hamburger"></i></h1>
  </div>
</div>

<div class="row">
  <div class="col m6">
    <h2 style="text-decoration: underline;">Burgers I want to eat</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col m6">
    <h2 style="text-decoration: underline;">Burgers I have eaten</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col s12 m6">
<form class="create-form">
  
  <h3 style="text-decoration: underline;">Add a Burger</h3>

  <div class="form-group">
    <label for="ca">Burger Name</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <p>
    <label>
      <input name="devoured" type="radio" value="0"/>
      <span>Want to eat</span>
    </label>
  </p>

  <p>
    <label>
      <input name="devoured" type="radio" value="1" />
      <span>Have eaten</span>
    </label>
  </p>

  <button class="btn waves-effect waves-light" type="submit">Add burger</button>
</form>

  </div>

</div>



